<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<VBox fx:controller="com.example.tooth_care.HomeController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="640.0" alignment="CENTER">

    <GridPane alignment="CENTER" hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>

        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="appointmentBtn" text="Appointments" onAction="#appointments"
                    style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 15px 50px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-font-weight: bold;" />

            <Button fx:id="patientBtn" text="Patients" onAction="#handlePatient"
                    style="-fx-font-size: 18px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 15px 50px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-font-weight: bold;" />

            <Button fx:id="createAppointBtn" text="Create Appointments" onAction="#handleCreateAppointment"
                    style="-fx-font-size: 18px; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 15px 50px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-font-weight: bold;" />
        </VBox>

    </GridPane>

</VBox>
